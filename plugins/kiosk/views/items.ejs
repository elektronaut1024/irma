<div class="row">
	<div class="span12">
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Name</th>
					<th>Ration</th>
					<th>Options</th>
					<th style="text-align: right;">Price</th>
				</tr>
			</thead>
			<tbody>
			<% for (var id in items) { %>
				<tr>
					<td>
					<a href="/item/<%= id %>/edit"><%= items[id].name() %></a>
					<% if (items[id].changes().length > 0) { %>
					[<a href="/item/<%= id %>/changes">changes</a>]
					<% } %>
					</td>
					<td>
					<% if (items[id].isStockable()) { %>
						<%= items[id].ration() %> <%= format.downcase(items[id].unit()) %>
					<% } %>
					</td>
					<td>
					<% if (items[id].isStockable()) { %> <span class="label label-info">stock</span> <% } %>
					<% if (items[id].isBuyable()) { %> <span class="label label-info">buy</span> <% } %>
					</td>
					<td style="text-align: right"><%- format.money(items[id].price() / 100) %></td>
				</tr>
			<% } %>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="span12">
		<div class="form-actions">
			<a class="btn btn-primary" href="/item/new">New</a>
		</div>
	</div>
</div>