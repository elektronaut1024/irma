<%
	var posneg = (booking.amount() < 0) ? 'negative' : 'positive';
%>

<div class="row booking">
	<div class="span12">
		<a class="" href="/booking/<%= booking.id() %>">
			<span class="id">Booking #<%= booking.id() %></span>
			<span class="info">
				<span class="label"><%= booking.type() %></span>
				<i class="icon-time"></i> <time title="<%- format.isodate(booking.time()) %>"><%- format.isodate(booking.time()) %></time>
				<span class="amount <%= posneg %>"><%= format.money(booking.amount() / 100) %></span>
			</span>
		</a>
	</div>
</div>

<script type="text/javascript">
$(document).ready(function () {
	$('time').prettyDate();
	setInterval(function(){ $('time').prettyDate(); }, 5000);
});
</script>