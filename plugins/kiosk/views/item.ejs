<div class="row noheader">
	<div class="span12">
	</div>
</div>

<%- partial('partials/item', { 'item' : item, 'mode' : 'default' }) %>

<div class="row">
	<div class="span12">
		<dl class="dl-horizontal">
			<dt>ID</dt>
			<dd><%= item.id() %></dd>
			<dt>Name</dt>
			<dd><%= item.name() %></dd>
			<% if (item.isStockable()) { %>
				<dt>Ration</dt>
				<dd><%= item.ration() %> <%= format.downcase(item.unit()) %></dd>
			<% } else { %>
				<dt>Description</dt>
				<dd><%= item.description() %></dd>
			<% } %>
			<dt>Price</dt>
			<dd><%= item.displayPrice() %></dd>
			<dt>Options</dt>
			<dd>
				<% if (item.isStockable()) { %> <span class="label label-info">stock</span> <% } %>
				<% if (item.isBuyable()) { %> <span class="label label-info">buy</span> <% } %>
			</dd>
		</dl>
	</div>
</div>

<div class="row" style="margin-top: 36px; margin-bottom: 36px;">
	<div class="span12" style="text-align: center;">
		<a class="btn btn-large btn-success" href="/pay/<%= item.id() %>">Buy again</a>
	</div>
</div>